<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <img src="..." alt="...">
    <div class="caption">
      <h3><%= link_to article.title, article_path(article) %></h3>
      <h6><%= article.user.full_name %></h6>
      <p><%= article.content %></p>
      <p>
        <% if has_rights?('article', 'edit', article.id) %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %>
        <% end %>
        <% if has_rights?('article', 'destroy', article.id) %>
          <%= link_to 'Destroy', article_path(article), method: :delete, class: 'btn btn-primary' %>
        <% end %>
      </p>
    </div>
  </div>
</div>
